<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="config/db.properties"></properties>

	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
		 <setting name="jdbcTypeForNull" value="NULL" />
	</settings>

	<typeAliases>
		<typeAlias type="co.yedam.puppy.member.vo.MemberVO"
			alias="MemberVO" />
		<typeAlias type="co.yedam.puppy.shopItem.vo.ShopItemVO"
			alias="ShopItemVO" />
        <typeAlias type="co.yedam.puppy.shop.vo.ShopVO" alias="ShopVO"/>
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper resource="co/yedam/puppy/shopItem/service/shop-item-mapper.xml" />
		<mapper resource="co/yedam/puppy/member/service/member-mapper.xml" />
        <mapper resource="co/yedam/puppy/shop/service/shop-mapper.xml" />
	</mappers>
</configuration>
